<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Navigation Drawer-->
    <style name="Widget.Bitpot.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
        <item name="itemTextColor">@drawable/navigation_text_selector</item>
        <item name="itemIconTint">@drawable/navigation_text_selector</item>
        <item name="itemShapeFillColor">@drawable/navigation_background_selector</item>
    </style>

    <!-- Progress Bar -->
    <style name="Widget.Bitpot.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal" >
        <item name="android:indeterminateDrawable">@drawable/progress_bar_horizontal_indeterminate</item>
        <item name="android:progressDrawable">@drawable/progress_bar_horizontal_progress</item>
    </style>

    <!-- Drawer Arrow -->
    <style name="Widget.Bitpot.DrawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/color_primary_text</item>
    </style>

    <!-- Switch -->
    <style name="Widget.Bitpot.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:minHeight">0dp</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
        <item name="track">@drawable/switch_track</item>
    </style>


</resources>
